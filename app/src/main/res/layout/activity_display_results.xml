                android:id="@+id/brainpic3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic3"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="QUESTION 3" />
            <TextView
                android:id="@+id/question3text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question3"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:textSize="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:text="Are boys or girls more likely to have autism?"/>
            <TextView
                android:id="@+id/q3correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: Boys"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question3text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boys are 4-5 times more likely to have autism than girls. A common theory for this among scientists is that autism is linked to the X chromosome, which boys only have one of and are therefore more likely to inherit recessive traits such as autism."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q3correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
