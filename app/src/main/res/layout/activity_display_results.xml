                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question6"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                android:text="Is there a cure to autism?"/>
            <TextView
                android:id="@+id/q6correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: No"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question6text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There is currently no cure to autism. Nevertheless, behavioral and speech therapy have proven beneficial to some people with autism."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q6correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic7"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic7"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="QUESTION 7" />
            <TextView
                android:id="@+id/question7text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question7"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="If one identical twin has autism, what are the odds that the other identical twin also has autism?"/>
            <TextView
                android:id="@+id/q7correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: 90%"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question7text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This high likelihood is a good indicator of a genetic cause of autism."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q7correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic8"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic8"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="QUESTION 8" />
            <TextView
                android:id="@+id/question8text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question8"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Can someone develop autism as an adult?"/>
            <TextView
                android:id="@+id/q8correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: No"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question8text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autism is something somebody is born with, but the symptoms typically appear between ages 3 and 4."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q8correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic9"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
