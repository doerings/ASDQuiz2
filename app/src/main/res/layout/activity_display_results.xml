<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".9"
    android:background="#206B40"
    tools:context="com.example.android.asdquiz.DisplayResultsActivity"
    android:id="@+id/linearlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/white"
            android:text="Thanks for taking the quiz! Let's go over the answers."/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/brainpic1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="QUESTION 1"
                android:textSize="20dp"/>
            <TextView
                android:id= "@+id/question1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question1"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:text="Can vaccines cause autism?"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/q1correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: No"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question1text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One of the biggest misconceptions about autism is that it can be caused by vaccinations. This is based off a falsified study by Andrew Wakefield in 1998 but there is absolutely no evidence to support this claim!"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q1correct"/>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic2"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="QUESTION 2" />
            <TextView
                android:id= "@+id/question2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question2"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="What causes autism?"/>
            <TextView
                android:id="@+id/q2correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: The cause is unknown"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question2text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="While the exact cause of autism is unknown, it is believed to be due to an interaction between genetics and the environment."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q2correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
