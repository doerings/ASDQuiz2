                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic4"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="QUESTION 4" />
            <TextView
                android:id="@+id/question4text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question4"
                android:textColor="@android:color/white"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="At what rate is autism growing in the US?"/>
            <TextView
                android:id="@+id/q4correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: 14%"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question4text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The number of people diagnosed with autism is increasing at a staggering number, but it is uncertain whether more people actually have autism, or whether more people are simply getting formal diagnoses of it."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q4correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic5"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
