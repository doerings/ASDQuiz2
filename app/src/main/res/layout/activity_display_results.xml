                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/brainpic5"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="QUESTION 5" />
            <TextView
                android:id="@+id/question5text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question5"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="20dp"
                android:text="Which of the following has the highest prevalence?"/>
            <TextView
                android:id="@+id/q5correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct answer: Autism"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginLeft="46dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/question5text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are more cases of Autism than Diabetes and AIDS combined."
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/q5correct"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/brainpic6"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/brain"/>
            <TextView
